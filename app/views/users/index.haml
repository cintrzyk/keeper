.row
  .col-md-6.col-md-offset-3
    = form_for @item, url: items_path, html: { multipart: true } do |form|
      = form.file_field :document
      .progress
        .progress-bar{ style: 'width: 0%;' }
      = form.submit class: 'btn btn-primary'

.row
  .col-md-12
    %ul.items-list
      - @items.each do |item|
        %li
          = "#{item.document_file_name} on #{item.created_at.to_s(:short)}"
